header.header
    nav.nav.nav--tours
        a.nav__el(href='/hang-hoa/tat-ca-mat-hang?page=1&limit=3') Tất cả mặt hàng
        //- a.nav__el(href='' data-toggle='dropdown') Vật tư y tế
        //- a.nav__el(href='/merchaindise/thuoc') Thuốc
        .dropdown
            a.nav__el.dropdown-toggle(href='/hang-hoa/thuoc?page=1&limit=3', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | Thuốc
            ul.dropdown-menu
                if medicals
                    each item in medicals
                        li
                        a.dropdown-item(href=`/hang-hoa/${item.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '').replace(/[đĐ]/g, 'd').replace(/([^0-9a-z-\s])/g, '').replace(/(\s+)/g, '-').replace(/^-+|-+$/g, '')}?page=1&limit=3`)= item
        .dropdown
            a.nav__el.dropdown-toggle(href='/hang-hoa/vat-tu-y-te?page=1&limit=3', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | Vật tư y tế
            ul.dropdown-menu
                if supplies
                    each item in supplies
                        li
                        a.dropdown-item(href=`/hang-hoa/${item.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '').replace(/[đĐ]/g, 'd').replace(/([^0-9a-z-\s])/g, '').replace(/(\s+)/g, '-').replace(/^-+|-+$/g, '')}?page=1&limit=3`)= item
        //- form.nav__search
        //- button.nav__search-btn
        //-     svg
        //-     use(xlink:href='img/icons.svg#icon-search')
        //- input.nav__search-input(type='text' placeholder='Search tours')
    .header__logo
        img(src='/imgs/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(href='/auth/logout') Log Out
            a.nav__el(href=`/user/${user.id}`)
                img.nav__user-img(src=`http://localhost:4000/${user.photoUrl.slice(11).replaceAll("\\", "/")}` alt='User photo')
                span= user.name.split(' ')[0]
        else
            a.nav__el.nav__el-cta(href='/auth/signup') Đăng kí
            a.nav__el.nav__el-cta(href='/auth/login') Đăng nhập