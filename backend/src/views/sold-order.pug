extend base

block content 
    .main__me
        .me__data
            if orderResult.length == 0
                h1 HIỆN TẠI BẠN CHƯA CÓ ĐƠN BÁN NÀO
            else
                h1 DANH SÁCH ĐƠN BÁN CỦA BẠN
                br
                each order, index in orderResult
                    .don-mua
                        //- input.form-control(type='text', aria-label='Sizing example input', aria-describedby='inputGroup-sizing-default', readonly, value=`${index}: ${order.productName}`)
                        .don__mua_span #{index +1}
                        a.don__mua__link(href=`http://localhost:4000/user-contract/don-ban/${order.orderAddress}`) #{order.productName.charAt(0).toUpperCase() + order.productName.slice(1)}
                        if order.status == 1
                            .don__mua__status Đã hoàn thành  
                        else 
                            .don__mua__status Chưa hoàn thành
        .btn-back__wrapper
            button.btn.btn-secondary(onclick='back()') Quay lại
    script.
        function back(){
        history.back()
        }